{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container" style="margin-top: 200px">
<h1>NASA API</h1>

    <h2>Your Token is: <span class="badge bg-secondary">{{ token }}</span></h2>
    {% if  app.user %}
        <a class="btn btn-primary btn-lg" href="{{ path('app_logout') }}">Logout</a>
        <a class="btn btn-secondary btn-lg" href="{{ path('api') }}">API</a>
        <a class="btn btn-info btn-lg" href="{{ path('regenerate_token') }}">Regenerate Token</a>
    {% else %}
        <a class="btn btn-primary btn-lg" href="{{ path('app_login') }}">Login</a>
        <a class="btn btn-secondary btn-lg" href="{{ path('app_register') }}">Register</a>
    {% endif %}
</div>
{% endblock %}
